<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="simple_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="hint_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">#536d81</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="proceed_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:drawableRight">@drawable/ic_proceed_arrow</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textColor">#1d3649</item>
    </style>

    <style name="main_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:lineSpacingExtra">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="secondary_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">#77b4ca</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
